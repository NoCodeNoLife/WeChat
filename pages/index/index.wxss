.swiper {
  height: 200px;
}

.slide-image {
  width: 100%;
  height: 200px;
}

.title {
 padding: 10px;
 height: 38px;
 border-bottom: #ececec 1px solid;
 color: #666;
 width: calc(100% - 20px);
 line-height: 38px;
 font-size: 16px;
}

.list {
  width: calc(100% - 20px);
  height: 80px;
  padding: 10px;
  border-bottom: #ececec 1px solid;
}

.list image {
  width: 80px;
  height: 80px;
  display: block;
  float: left;
  margin-right: 10px;
}

.list div {
  float: left;
  height: 20px;
  line-height: 20px;
  padding-bottom: 6px;
  width: calc(100% - 90px);
  overflow: hidden;
  font-size: 16px;
}

.list p {
  float: left;
  height: 54px;
  line-height: 18px;
  width: calc(100% - 90px);
  font-size: 12px;
  overflow: hidden;
  color: #666;
}