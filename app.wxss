/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.video-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
}

.video {
  width: 100%;
  height: 225px;
  z-index: 999;
}

.box {
  position: absolute;
  top: 225px;
  bottom: 0;
  left: 0;
  overflow: auto;
  width: 100%;
}

.class-list {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.class-list p {
  width: calc(100% - 10px);
  padding: 6px 0 6px 10px;
  height: 32px;
  line-height: 32px;
  font-size: 14px;
  color: #666;
  display: block;
  overflow: hidden;
  border-bottom: #ececec 1px solid;
}

.active {
  color: red;
}

